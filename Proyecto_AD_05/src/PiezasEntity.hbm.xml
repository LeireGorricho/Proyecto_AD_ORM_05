<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernate_bd.PiezasEntity" table="piezas" schema="proyecto_ad3_orm">
        <id name="codigo">
            <column name="codigo" sql-type="varchar(6)" length="6"/>
        </id>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="precio">
            <column name="precio" sql-type="float" precision="-1"/>
        </property>
        <property name="descripcion">
            <column name="descripcion" sql-type="text" not-null="true"/>
        </property>
        <property name="estado">
            <column name="estado" sql-type="varchar(4)" length="4"/>
        </property>
        <set name="gestionsByCodigo" inverse="true">
            <key>
                <column name="codpieza"/>
            </key>
            <one-to-many not-found="ignore" class="hibernate_bd.GestionEntity"/>
        </set>
    </class>
</hibernate-mapping>